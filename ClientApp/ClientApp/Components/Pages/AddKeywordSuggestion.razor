@page "/keyword-suggestions/add"
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@rendermode InteractiveServer
@using System.Net.Http.Json
@using ClientApp.Dto

<h3 class="mb-4">Add Keyword Suggestion</h3>

<EditForm Model="NewSuggestion" OnValidSubmit="HandleValidSubmit" FormName="KeywordSuggestionForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Ideas</h5>
                    <button type="button" class="btn btn-sm btn-light" @onclick="AddIdea">+ Add Idea</button>
                </div>
                <div class="card-body">
                    @foreach (var idea in NewSuggestion.Ideas)
                    {
                        <div class="mb-3">
                            <label class="form-label">Keyword:</label>
                            <InputText class="form-control" @bind-Value="idea.Keyword" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Difficulty:</label>
                            <InputText class="form-control" @bind-Value="idea.Difficulty" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Volume:</label>
                            <InputText class="form-control" @bind-Value="idea.Volume" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Updated:</label>
                            <InputDate class="form-control" @bind-Value="idea.LastUpdated" />
                        </div>
                        <hr />
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4 border-warning">
                <div class="card-header bg-warning d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Questions</h5>
                    <button type="button" class="btn btn-sm btn-dark" @onclick="AddQuestion">+ Add Question</button>
                </div>
                <div class="card-body">
                    @foreach (var question in NewSuggestion.Questions)
                    {
                        <div class="mb-3">
                            <label class="form-label">Keyword:</label>
                            <InputText class="form-control" @bind-Value="question.Keyword" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Difficulty:</label>
                            <InputText class="form-control" @bind-Value="question.Difficulty" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Volume:</label>
                            <InputText class="form-control" @bind-Value="question.Volume" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Updated:</label>
                            <InputDate class="form-control" @bind-Value="question.LastUpdated" />
                        </div>
                        <hr />
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success me-2">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="NavigateBack">Cancel</button>
    </div>
</EditForm>

@code {
    private KeywordSuggestionsDto NewSuggestion = new()
    {
        Ideas = new(),
        Questions = new()
    };

    private void AddIdea()
    {
        NewSuggestion.Ideas.Add(new IdeaDto { LastUpdated = DateTime.UtcNow });
    }

    private void AddQuestion()
    {
        NewSuggestion.Questions.Add(new QuestionDto { LastUpdated = DateTime.UtcNow });
    }

    private async Task HandleValidSubmit()
    {
        var client = HttpClientFactory.CreateClient("KeywordSuggestionsApi");
        var response = await client.PostAsJsonAsync("api/keyword-suggestions", NewSuggestion);

        if (response.IsSuccessStatusCode)
        {
            NavigateBack();
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/keyword-suggestions", forceLoad: false);
        Navigation.Refresh();
    }
}
