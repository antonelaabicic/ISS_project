@page "/keyword-suggestions/add"
@inject TokenHttpClientService TokenService
@inject NavigationManager Navigation
@using System.Net.Http.Json
@using ClientApp.Dto
@rendermode InteractiveServer

<h3 class="mb-4">Add Keyword Suggestion</h3>

<EditForm Model="NewSuggestion" OnValidSubmit="HandleValidSubmit" FormName="KeywordSuggestionForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-4 border p-3 rounded border-primary">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Ideas</h5>
                    <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddIdea">+ Add</button>
                </div>
                @foreach (var idea in NewSuggestion.Ideas)
                {
                    <div class="mb-3">
                        <label>Keyword:</label>
                        <InputText class="form-control" @bind-Value="idea.Keyword" />
                        <label>Difficulty:</label>
                        <InputText class="form-control" @bind-Value="idea.Difficulty" />
                        <label>Volume:</label>
                        <InputText class="form-control" @bind-Value="idea.Volume" />
                        <label>Last Updated:</label>
                        <InputDate class="form-control" @bind-Value="idea.LastUpdated" />
                    </div>
                    <hr />
                }
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-4 border p-3 rounded border-warning">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Questions</h5>
                    <button type="button" class="btn btn-sm btn-outline-warning" @onclick="AddQuestion">+ Add</button>
                </div>
                @foreach (var question in NewSuggestion.Questions)
                {
                    <div class="mb-3">
                        <label>Keyword:</label>
                        <InputText class="form-control" @bind-Value="question.Keyword" />
                        <label>Difficulty:</label>
                        <InputText class="form-control" @bind-Value="question.Difficulty" />
                        <label>Volume:</label>
                        <InputText class="form-control" @bind-Value="question.Volume" />
                        <label>Last Updated:</label>
                        <InputDate class="form-control" @bind-Value="question.LastUpdated" />
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success me-2">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="NavigateBack">Cancel</button>
    </div>
</EditForm>

@code {
    private KeywordSuggestionsDto NewSuggestion = new() { Ideas = new(), Questions = new() };

    private void AddIdea() => NewSuggestion.Ideas.Add(new IdeaDto { LastUpdated = DateTime.UtcNow });
    private void AddQuestion() => NewSuggestion.Questions.Add(new QuestionDto { LastUpdated = DateTime.UtcNow });

    private async Task HandleValidSubmit()
    {
        var response = await TokenService.TryWithRefresh(client =>
            client.PostAsJsonAsync("api/keyword-suggestions", NewSuggestion)
        );

        if (response.IsSuccessStatusCode)
        {
            NavigateBack();
        }
        else
        {
            Console.Error.WriteLine("Failed to save keyword suggestion");
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/keyword-suggestions", forceLoad: true);
        Navigation.Refresh();
    }
}
