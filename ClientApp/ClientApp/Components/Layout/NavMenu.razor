@using ClientApp.Service
@inject AuthStateService AuthState
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject HttpClient Http

@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ClientApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="xsd-validation">XSD Validation</NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rng-validation">RNG Validation</NavLink>
        </div>

        @if (AuthState.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/keyword-suggestions">Keyword Suggestions API</NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/logout">Logout</NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/login">Login</NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        AuthState.OnChange -= StateHasChanged;
    }
}
